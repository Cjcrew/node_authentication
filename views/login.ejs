<% include ./partials/header %>

<!-- Height Filler -->
<div class="filler-div"></div>

<!-- Login Form -->
<form class="loginForm" action="/login" method="post" autocomplete="off">
  <div class="formContainer">
    <label for="email"><strong><u>Email address:</u></strong></label>
    <input type="email" placeholder="JohnDoe@gmail.com" name="email" required>

    <label for="password"><strong><u>Password:</u></strong></label>
    <input type="password" name="password" placeholder="Password" required>
    <!-- csrf Protection -->
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <button type="submit">Login <i class="fas fa-sign-in-alt"></i></button>
    <a href="/register">Don't have an account yet? Click here to sign up...</a>
  </div>
</form>

<% include ./partials/footer %>
